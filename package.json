{
  "name": "vue3-boilerplate",
  "description": "Quick boilerplate Vue3,Pinia,VueRouter,Tailwind,Icons,Typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 4173",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts --fix --ignore-path .gitignore && vue-tsc --noEmit",
    "lint:format": "prettier --check --ignore-path .gitignore '**/*.{js,jsx,vue,ts}'",
    "format": "prettier --write --ignore-path .gitignore '**/*.{js,jsx,vue,ts}'"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "pinia": "^2.0.22",
    "vue": "^3.2.40",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/lodash": "^4.14.186",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/cli-plugin-typescript": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "autoprefixer": "^10.4.12",
    "cssnano": "^5.1.13",
    "eslint": "^8.24.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.5.1",
    "@heroicons/vue": "^2.0.11",
    "postcss": "^8.4.17",
    "postcss-import": "^15.0.0",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4",
    "vite": "^3.1.4",
    "vite-svg-loader": "^3.6.0",
    "vue-tsc": "^0.40.13"
  }
}
